<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="100"
        tools:context=".Activities.EmailVerificationActivity">
    <TextView
            android:id="@+id/txtEmailVerification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:text=""
            android:gravity="center"
            android:textSize="45sp"/>

    <Button
            android:id="@+id/btnBackEmailVerification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/roundcorner_button"
            android:drawableStart="@drawable/ic_arrow_back_white_24dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="25sp"/>
</LinearLayout>