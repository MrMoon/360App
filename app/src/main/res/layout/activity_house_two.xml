<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        tools:context=".Activities.HouseTwoActivity">

    <com.gjiazhe.panoramaimageview.PanoramaImageView
            android:id="@+id/panoramaHouseTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ozero"
            android:scaleType="fitXY"
            app:piv_enablePanoramaMode="true"
            android:scrollbars="horizontal"
            app:piv_show_scrollbar="true"/>
</LinearLayout>